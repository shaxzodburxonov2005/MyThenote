<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddUserDBFragment">

    <LinearLayout
        android:background="@color/purple_700"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/last_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/backpop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/back"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="Bemor haqida ma'lumot qo'shish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
          app:layout_constraintRight_toLeftOf="@+id/last_name_img"
            android:id="@+id/last_name"
            android:hint="Ismini kiritish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/last_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/last_name_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/name"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_name"
            android:layout_marginTop="10dp"

            android:id="@+id/first_name"
            android:hint="Familiyasini kiritish"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/first_name_img"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            app:layout_constraintTop_toBottomOf="@+id/last_name_img"
            app:layout_constraintLeft_toRightOf="@+id/first_name"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/first_name_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/surname"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <EditText
            app:layout_constraintRight_toLeftOf="@+id/birthday_tv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name"
            android:layout_marginTop="10dp"
            android:inputType="date"

            android:id="@+id/birthday_tv"
            android:hint="Tugilgan sanani kiritish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            app:layout_constraintTop_toBottomOf="@+id/first_name_img"
            app:layout_constraintLeft_toRightOf="@+id/birthday_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/birthday_tv_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/birthday"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birthday_tv"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@+id/adress_tv_img"
            android:id="@+id/address_tv"
            android:hint="Manzil kiritish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            app:layout_constraintTop_toBottomOf="@+id/birthday_tv_img"
            app:layout_constraintLeft_toRightOf="@+id/address_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/adress_tv_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/address"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <EditText
            app:layout_constraintRight_toLeftOf="@+id/number_tv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_tv"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:id="@+id/number_tv"
            android:hint="Raqam kiritish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView

            app:layout_constraintTop_toBottomOf="@+id/adress_tv_img"
            app:layout_constraintLeft_toRightOf="@+id/number_tv"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/number_tv_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/phone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.airbnb.lottie.LottieAnimationView

        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


</LinearLayout>